---
import Layout from '../layouts/Layout.astro';
import { Button } from '@astro-react/ui-button';
import { SaaSSignup } from '@astro-react/ui-saas-signup';

const features = [
  {
    title: 'ویژگی اول',
    description: 'توضیحات کوتاه درباره اولین ویژگی محصول',
    icon: '🌟'
  },
  {
    title: 'ویژگی دوم', 
    description: 'توضیحات کوتاه درباره دومین ویژگی محصول',
    icon: '⚡'
  },
  {
    title: 'ویژگی سوم',
    description: 'توضیحات کوتاه درباره سومین ویژگی محصول',
    icon: '🔒'
  }
];

const insuranceTypes = [
  {
    title: 'بیمه خودرو',
    description: 'محاسبه حق بیمه خودرو با تمام عوامل مؤثر',
    icon: '🚗'
  },
  {
    title: 'بیمه آتش‌سوزی',
    description: 'محاسبه بیمه آتش‌سوزی ساختمان و محتویات',
    icon: '🔥'
  },
  {
    title: 'بیمه مسافرتی',
    description: 'محاسبه بیمه مسافرت داخلی و خارجی',
    icon: '✈️'
  }
];
---

<Layout title="صفحه اصلی" description="صفحه اصلی محصول فوق العاده ما - راه حلی نوآورانه برای نیازهای شما">
  <!-- Hero Section -->
  <section class="bg-brown-100 py-20">
    <div class="container mx-auto px-4 flex flex-col items-center text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-orange-800 mb-6">
        محصول فوق العاده ما
      </h1>
        <p class="text-xl text-brown-600 mb-8 max-w-2xl">
        راه حل نوآورانه ما برای مشکل
      </p>
      <Button client:load text="همین حالا شروع کنید" />
    </div>
  </section>

  <!-- Insurance Calculator Section -->
  <section class="py-20 bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">محاسبه آنلاین بیمه</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          محاسبه دقیق و آنلاین انواع بیمه با چند کلیک ساده
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        {insuranceTypes.map((insurance) => (
          <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <div class="text-4xl mb-4 text-center">{insurance.icon}</div>
            <h3 class="text-xl font-bold text-gray-800 mb-2 text-center">{insurance.title}</h3>
            <p class="text-gray-600 text-center">{insurance.description}</p>
          </div>
        ))}
      </div>
      
      <div class="text-center">
        <a href="/insurance" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
          شروع محاسبه بیمه
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">ویژگی‌های ما</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-brown-50 p-6 rounded-lg shadow-sm border border-brown-200">
            <div class="text-4xl mb-4 text-orange-600">{feature.icon}</div>
            <h3 class="text-xl font-bold text-orange-700 mb-2">{feature.title}</h3>
            <p class="text-brown-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SaaS Signup Section -->
  <section class="py-20 bg-brown-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-orange-800 mb-12">همین حالا سرویس SaaS خود را راه‌اندازی کنید</h2>
      <div class="max-w-3xl mx-auto">
        <SaaSSignup client:load />
      </div>
    </div>
  </section>
</Layout> 