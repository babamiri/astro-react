---
// Features section component
const features = [
  { icon: "🔥", title: "بیمه آتش‌سوزی رایگان", description: "پوشش کامل در برابر آتش‌سوزی و انفجار" },
  { icon: "💳", title: "پرداخت اقساطی", description: "امکان پرداخت در ۶ تا ۱۲ قسط" },
  { icon: "🚗", title: "خودرو جایگزین", description: "خودرو رایگان در زمان تعمیر" },
  { icon: "🔧", title: "امداد جاده‌ای", description: "خدمات امداد ۲۴ ساعته در سراسر کشور" },
  { icon: "📱", title: "اپلیکیشن موبایل", description: "مدیریت آسان بیمه از طریق گوشی" },
  { icon: "⚡", title: "پرداخت سریع خسارت", description: "بررسی و پرداخت خسارت در کمترین زمان" },
  { icon: "🏥", title: "پوشش درمانی", description: "پوشش هزینه‌های درمانی سرنشینان" },
  { icon: "🛡️", title: "حفاظت قانونی", description: "پشتیبانی حقوقی در مسائل بیمه‌ای" }
];
---

<section id="features" class="py-20 bg-white fade-in-on-scroll">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">امکانات و خدمات</h2>
      <p class="text-xl text-gray-600">مجموعه کاملی از خدمات برای راحتی و آسودگی خیال شما</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature, index) => (
        <div class="text-center p-6 rounded-xl hover:bg-gray-50 transition-colors group hover-scale feature-item" style={`animation-delay: ${index * 0.1}s`}>
          <div class="text-4xl mb-4 animate-bounce-icon" style={`animation-delay: ${index * 0.2}s`}>
            {feature.icon}
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
          <p class="text-gray-600 text-sm">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes bounce-icon {
    0%, 100% { transform: translateY(0) rotate(0deg) scale(1); }
    50% { transform: translateY(-5px) rotate(10deg) scale(1.1); }
  }

  .animate-bounce-icon {
    animation: bounce-icon 2s ease-in-out infinite;
  }

  .feature-item {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .hover-scale:hover {
    transform: scale(1.05);
    background-color: #f9fafb;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style> 