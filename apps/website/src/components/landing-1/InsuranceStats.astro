      opacity: 0.8;
    }
  }

  .stat-label {
    font-size: 1.25rem;
    font-weight: 600;
    color: #e5e7eb;
    margin-bottom: 0.5rem;
    animation: label-fade 3s ease-in-out infinite alternate;
  }

  @keyframes label-fade {
    from {
      opacity: 0.8;
    }
    to {
      opacity: 1;
    }
  }

  .stat-description {
    font-size: 0.875rem;
    color: #9ca3af;
    opacity: 0.8;
