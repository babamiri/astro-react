---
// Special offers section component
const offers = [
  {
    title: "تخفیف دانشجویی",
    discount: "۳۰٪",
    description: "ویژه دانشجویان و فارغ‌التحصیلان جدید",
    color: "from-blue-500 to-blue-600",
    features: ["کارت دانشجویی معتبر", "سن زیر ۲۵ سال", "بدون سابقه خسارت"]
  },
  {
    title: "تخفیف وفاداری",
    discount: "۴۰٪",
    description: "برای مشتریان قدیمی و وفادار",
    color: "from-green-500 to-green-600",
    features: ["بیش از ۳ سال مشتری", "بدون خسارت", "تمدید به موقع"]
  },
  {
    title: "تخفیف گروهی",
    discount: "۵۰٪",
    description: "برای خرید گروهی و شرکت‌ها",
    color: "from-purple-500 to-purple-600",
    features: ["حداقل ۵ خودرو", "پرداخت نقدی", "قرارداد سالانه"]
  }
];
---

<section id="offers" class="py-20 bg-gradient-to-br from-orange-50 to-red-50 fade-in-on-scroll">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        پیشنهادات ویژه
      </h2>
      <p class="text-xl text-gray-600">
        از تخفیف‌های استثنایی و هدایای ارزشمند بهره‌مند شوید
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {offers.map((offer, index) => (
        <div 
          class="bg-white rounded-2xl shadow-xl overflow-hidden group hover-lift offer-card"
          style={`animation-delay: ${index * 0.2}s`}
        >
          <div class={`bg-gradient-to-r ${offer.color} text-white p-6 text-center relative overflow-hidden`}>
            <div class="shine-effect absolute inset-0 bg-white/10"></div>
            <div class="text-4xl font-bold mb-2 animate-pulse relative z-10">
              {offer.discount}
            </div>
            <div class="text-xl font-semibold relative z-10">{offer.title}</div>
          </div>
          
          <div class="p-6">
            <p class="text-gray-600 mb-4">{offer.description}</p>
            
            <div class="space-y-2 mb-6">
              {offer.features.map((feature, featureIndex) => (
                <div 
                  class="flex items-center feature-item"
                  style={`animation-delay: ${(index * 0.2) + (featureIndex * 0.1)}s`}
                >
                  <svg class="h-5 w-5 text-green-500 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-sm text-gray-700">{feature}</span>
                </div>
              ))}
            </div>
            
            <button class="w-full bg-gray-900 hover:bg-gray-800 text-white py-3 rounded-lg font-semibold transition-all duration-300 hover-scale">
              درخواست تخفیف
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes shine {
    0% {
      transform: translateX(-100%);
      opacity: 0;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      transform: translateX(100%);
      opacity: 0;
    }
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .shine-effect {
    animation: shine 2s ease-in-out infinite;
  }

  .offer-card {
    opacity: 0;
    transform: translateY(30px);
    animation: slideInUp 0.6s ease-out forwards;
  }

  .feature-item {
    opacity: 0;
    transform: translateX(-20px);
    animation: slideInUp 0.4s ease-out forwards;
  }

  .hover-lift:hover {
    transform: translateY(-10px) rotateY(5deg);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    transition: all 0.3s ease;
  }

  .hover-scale:hover {
    transform: scale(1.05);
    background-color: #1f2937;
  }
</style> 