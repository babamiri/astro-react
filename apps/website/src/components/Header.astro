---
const { activeLink = '/' } = Astro.props;
---

<header class="bg-white shadow-sm py-4 sticky top-0 z-50">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
      <div class="text-2xl font-bold text-blue-800 flex items-center gap-2">
        <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2L3 7l9 5 9-5-9-5zM3 17l9 5 9-5M3 12l9 5 9-5"/>
        </svg>
        <a href="/">بیمه خودرو</a>
      </div>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-8">
      <a href="/" class={`${activeLink === '/' ? 'text-blue-600 font-bold' : 'text-gray-600'} hover:text-blue-600 transition-colors`}>
        خانه
      </a>
      <a href="#benefits" class="text-gray-600 hover:text-blue-600 transition-colors">
        مزایای بیمه
      </a>
      <a href="#calculator" class="text-gray-600 hover:text-blue-600 transition-colors">
        محاسبه آنلاین
      </a>
      <a href="#about" class="text-gray-600 hover:text-blue-600 transition-colors">
        درباره ما
      </a>
      <a href="#contact" class="text-gray-600 hover:text-blue-600 transition-colors">
        تماس با ما
      </a>
      
      <!-- CTA Button -->
      <a href="#calculator" 
         class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-bold transition-colors">
        محاسبه آنلاین قیمت
      </a>
    </nav>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600 hover:text-blue-600">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <div class="container mx-auto px-4 py-4 space-y-4">
      <a href="/" class={`block ${activeLink === '/' ? 'text-blue-600 font-bold' : 'text-gray-600'} hover:text-blue-600`}>
        خانه
      </a>
      <a href="#benefits" class="block text-gray-600 hover:text-blue-600">
        مزایای بیمه
      </a>
      <a href="#calculator" class="block text-gray-600 hover:text-blue-600">
        محاسبه آنلاین
      </a>
      <a href="#about" class="block text-gray-600 hover:text-blue-600">
        درباره ما
      </a>
      <a href="#contact" class="block text-gray-600 hover:text-blue-600">
        تماس با ما
      </a>
      <a href="#calculator" 
         class="block bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-bold text-center transition-colors">
        محاسبه آنلاین قیمت
      </a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script> 