---
import BaseLayout from '../layouts/Layout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="max-w-3xl mx-auto prose prose-lg dark:prose-invert">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1>
      <div class="text-sm opacity-75">
        <time>{new Date(frontmatter.pubDate).toLocaleDateString('fa-IR')}</time>
        <span class="mx-2">•</span>
        <span>نویسنده: {frontmatter.author}</span>
      </div>
      {frontmatter.image && <img src={frontmatter.image} alt={frontmatter.title} class="mt-6 rounded-lg" />}
    </header>
    
    <slot />
    
    <footer class="mt-12 border-t pt-6">
      <div class="flex flex-wrap gap-2">
        {frontmatter.tags.map((tag: string) => (
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 rounded-full text-sm">
            #{tag}
          </span>
        ))}
      </div>
    </footer>
  </article>
</BaseLayout>
