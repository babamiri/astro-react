---
import Layout from '../layouts/Layout.astro';
import CTAButton from '../components/CTAButton.tsx';

const features = [
  {
    title: 'ویژگی اول',
    description: 'توضیحات کوتاه درباره اولین ویژگی محصول',
    icon: '🌟'
  },
  {
    title: 'ویژگی دوم', 
    description: 'توضیحات کوتاه درباره دومین ویژگی محصول',
    icon: '⚡'
  },
  {
    title: 'ویژگی سوم',
    description: 'توضیحات کوتاه درباره سومین ویژگی محصول',
    icon: '🔒'
  }
];
---

<Layout title="صفحه اصلی">
  <main class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow-sm py-4">
      <div class="container mx-auto px-4 flex justify-between items-center">
        <div class="text-2xl font-bold text-gray-800">لوگو</div>
        <nav class="flex gap-6">
          <a href="#" class="text-gray-600 hover:text-blue-600">صفحه اصلی</a>
          <a href="#" class="text-gray-600 hover:text-blue-600">درباره ما</a>
          <a href="#" class="text-gray-600 hover:text-blue-600">تماس با ما</a>
        </nav>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="bg-gray-50 py-20 flex-grow">
      <div class="container mx-auto px-4 flex flex-col items-center text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
          محصول فوق العاده ما
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl">
          راه حل نوآورانه ما برای مشکل
        </p>
        <CTAButton client:load text="همین حالا شروع کنید" />
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">ویژگی‌های ما</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-800 mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
      <div class="container mx-auto px-4 text-center">
        <div class="flex justify-center gap-6 mb-6">
          <a href="#" class="hover:text-blue-400">توییتر</a>
          <a href="#" class="hover:text-blue-400">اینستاگرام</a>
          <a href="#" class="hover:text-blue-400">لینکدین</a>
        </div>
        <p>© {new Date().getFullYear()} شرکت ما. تمام حقوق محفوظ است.</p>
      </div>
    </footer>
  </main>
</Layout>
